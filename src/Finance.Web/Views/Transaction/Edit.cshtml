@{
    ViewBag.Title = "Edit Transaction";
}

@section extracss
{
    <link href="~/lib/bootstrap-datetimepicker/css/bootstrap-datetimepicker.css" rel="stylesheet" type="text/css" />
}

@section extrajs
{
    <script type="text/javascript" src="~/lib/momentjs/moment.js"></script>
    <script type="text/javascript" src="~/lib/parsleyjs/parsley.js"></script>
    <script type="text/javascript" src="~/lib/bootstrap-datetimepicker/js/bootstrap-datetimepicker.js"></script>
}

<div id="page-wrapper">
    @{ await Html.RenderPartialAsync("_TransactionForm"); }
</div>

@section extrascripts
{
    <script type="text/javascript">
    $(function(){
      $('#dp_transaction').datetimepicker({
          format: 'MM/DD/YYYY'
      });
    });

  		function CategoryCtrl($scope, $http){
            $scope.selectedCategory = "";
            $scope.categories = [];

            $http({
                method: "GET",
                url: "/category/index",
                headers: { 'X-Requested-With': 'XMLHttpRequest' }
            }).success(function(result){
                $scope.categories = result;
            });
        }
    </script>
}