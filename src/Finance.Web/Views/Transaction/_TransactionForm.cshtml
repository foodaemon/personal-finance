@model  Finance.Web.ViewModels.TransactionViewModel

<div class="container-fluid">
	<div class="animated fadeIn">
<div class="row">
			<div class="col-md-12">
    <br />
    @using (Html.BeginForm(null, null, FormMethod.Post, new { data_parsley_validate = "", role="form" })) 
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.Transaction.Id)
        <div class="form-group" ng-controller="CategoryCtrl">
            <label for="Category">Category</label>
            @Html.DropDownListFor(model => model.Transaction.CategoryId, Model.CategorySelectList, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <input type="text" class="form-control" name="Transaction.Description" value="@Model.Transaction.Description" placeholder="e.g. Tom Thumb" />
        </div>
        <div class="form-group">
            <input type="text" class="form-control" name="Transaction.Amount" value="@Model.Transaction.Amount" placeholder="e.g. 10.02" />
        </div>
        <div class="form-group input-group" id='dp_transaction' data-date-format="MM/DD/YYYY">
            <input type='text' id="transaction_date" class="form-control" name="Transaction.Date" value="@Model.Transaction.Date.ToString("MM/dd/yyyy")" placeholder="mm/dd/yyyy" />
            <span class="input-group-addon">
                <i class="glyphicon glyphicon-calendar"></i>
            </span>
        </div>
        <div class="form-group">
            @Html.CheckBoxFor(x => x.Transaction.IsIncome, new { @class = "simple" })  Is Income
        </div>
        <div>
            <textarea name="Transaction.Comments" class="textarea" placeholder="Comment" style="width: 100%; height: 125px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;">@Model.Transaction.Comments</textarea>
        </div>
        <div class="box-footer clearfix">
            <button type="submit" class="pull-left btn btn-primary" id="SaveTransaction">Save <i class="fa fa-arrow-circle-right"></i></button>
        </div>
    }
				</div>
</div> @* row *@
</div>
	</div>